@model AssetManager.App.Models.User

<div id="left-nav" class="navbar navbar-default navbar-static-side nav-collapse" role="navigation" @*data-ng-controller="LeftNavController"*@>
    <div class="navbar-inner">
        <ul class="nav panel-group" id="accordion">
            <li class="panel" data-ng-class="{'active':vm.state.name==='dashboard'}">
