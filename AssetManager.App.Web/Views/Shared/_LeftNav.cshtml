                <ul id="dashboardSubmenu" class="panel-collapse collapse sidebar-dropdown-list"></ul>
            </li>
            <li class="panel" data-ng-class="{'active':vm.state.name==='graphs.failures' || vm.state.name==='graphs.compare' || vm.state.name==='graphs.incidents' || vm.state.name==='graphs.costincidents' || vm.state.name==='graphs.sectionincidents' || vm.state.name==='graphs.sectiongearincidents'}">
